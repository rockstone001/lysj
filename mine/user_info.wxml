<view class="page">
  <include src="/include/return.wxml" />
  <view class="page__bd">
    <form bindsubmit="save" class="form-no-class">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
              <image src="/images/mobile.png" class="icon"></image>
              <view class="weui-label">手机号</view>
            </view>
            <view class="weui-cell__bd">
              <input name="mobile" class="weui-input" type="number" placeholder="请输入手机号" value="{{mobile}}"/>
            </view>
        </view>
        <view class="weui-cell weui-cell_input weui-cell_vcode">
            <view class="weui-cell__hd">
              <image src="/images/community.png" class="icon"></image>
              <view class="weui-label">所在位置</view>
            </view>
            <view class="weui-cell__bd">
              <input name="location" class="weui-input" type="text" placeholder="请选择位置" value="{{location}}" bindtap="getLocation"/>
              <input name="latitude" class="weui-input" type="text"  value="{{latitude}}" hidden="true"/>
              <input name="longitude" class="weui-input" type="text" value="{{longitude}}" hidden="true"/>
            </view>
            <view class="weui-cell__ft">
                <view class="weui-vcode-btn" bindtap="getLocation">获取位置</view>
            </view>
        </view>
      </view>
      <view class="weui-btn-area">
        <button class="weui-btn" type="primary" formType="submit">保存</button>
      </view>
    </form>
  </view>
</view>