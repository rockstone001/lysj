.basic_info {
  display: flex;
  padding: 20rpx;
  border-top: 1px solid #e9e9e9;
}
.basic_info image {
   flex: 2;
   height: 320rpx;
}
.basic_info .text_info {
  flex: 3;
  padding-left: 40rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.text_info .author, .text_info .price {
  font-size: .8em;
  color: #6a6a6a;
  margin-top: .5em;
}
.weui-cell__ft {
  flex: 2;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.weui-cell__hd .weui-label {
  width: 120px;
}
.weui-cells {
  color: #4a4a4a;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: .8em;
}
.summary {
  padding: 30rpx;
  color: #4a4a4a;
  font-size: .8em;
}
.summary .title {
  font-size: 1.1em;
  margin-bottom: 20rpx;
}
.operation {
  position: fixed;
     top: 0px;   
    /* bottom: 0px;   */
  width: 100%;
  height: 48px;
  padding:0px;
  background-color: #fff;
  display: flex;
  border-top: 1px solid #639bdc;
}
.operation .collect, .operation .communicate, .operation .borrow {
  display: inline-block;
  flex:1;
  line-height: 48px;
  text-align: center;
  font-size: .9em;
}
.operation .borrow {
  flex:2;
  background-color: #639bdc;
  color: #fff;
}
.operation .borrow text {
  font-size: 1.2em;
}
